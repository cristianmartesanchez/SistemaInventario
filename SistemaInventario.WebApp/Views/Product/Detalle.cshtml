@model SistemaInventario.Core.DTOs.ProductDto
@{
}
<div class="card">
    <div class="card-header">
        <h5 class="float-left">Detalle proudcto</h5>
    </div>

    <div class="card-body">
        <table id="table_view" class="table table-hover table-detail-view table-bordered w-100">
            <thead>

            </thead>
            <tbody>
                <tr>
                    <th class="w-25"><strong>Producto</strong></th>
                    <td>@Model.ProductName</td>
                </tr>
                <tr>
                    <th class="w-25"><strong>Código de Barra</strong></th>
                    <td>@Model.Barcode</td>
                    <th class="w-25"><strong>Unidad de Medida</strong></th>
                    <td>@Model.UnitOfMeasureId</td>
                </tr>
                <tr>
                    <th class="w-25"><strong>Descripción</strong></th>
                    <td colspan="3">@Model.Description</td>
                </tr>
                <tr>
                    <th class="w-25"><strong>Precio de compra</strong></th>
                    <td>@Model.DefaultBuyingPrice</td>
                    <th class="w-25"><strong>Precio de venta</strong></th>
                    <td>@Model.DefaultSellingPrice</td>
                </tr>
                <tr>
                    <th class="w-25"><strong>Stock</strong></th>
                    <td>@Model.Stock</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>